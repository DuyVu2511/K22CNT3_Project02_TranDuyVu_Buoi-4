@model IEnumerable<K22CN3_TranDuyVu_Project02.Models.GAME>

@{
    ViewBag.Title = "Danh sach game";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card w-100">
                <img src="@item.HinhAnh" class="card-img-top" alt="@item.TenGame">
                <div class="card-body">
                    <h5 class="card-title">@item.TenGame</h5>
                    <p>Gia: <span class="text-danger">@item.DonGia.Value.ToString("#,##0")</span></p>
                    <a href="/TDVCart/AddToCart?id=@item.ID&TenGame=@item.TenGame&HinhAnh=@item.HinhAnh&SoLuongMua=1&DonGiaMUa=@item.DonGia" 
                        class="btn btn-primary">
                        Mua hang</a>
                </div>
            </div>
        </div>
    }
</div>
